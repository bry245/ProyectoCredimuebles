@model CrediV1_Prueba.Entities.UsuarioEnt
@{
    ViewData["Title"] = "InicioDeSesion";
    Layout = "~/Views/Shared/Layout_login.cshtml";
}
<div class="container">
    <div class="row justify-content-between align-items-center">
        <div class="col-lg-6 login-bg" style="text-align:center">
            <img src="~/logoc2.PNG" alt="100" width="200px" align="middle" />
            <h2 class="section-title">&nbsp;</h2>
            <h3 class="section-title">Ingrese los datos solicitados</h3>
            @{
                var message = TempData["Mensaje"] as string;
            }

            @if (!string.IsNullOrEmpty(message))
            {
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <b>@message</b>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="row my-5" style="justify-content:center">
                <div class="col-6 col-md-6">
                    
                    @using (Html.BeginForm("IniciarSesion", "Inicio", FormMethod.Post))
                    {

                        <div class="row">
                            <div class="form-group py-2">
                                <div class="input-login">
                                    <span class="fa fa-user p-2"></span>
                                    @Html.TextBoxFor(m => m.correo, new { @type = "text", @class = "input-l", @id = "usernameL", @placeholder = "Usuario" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group py-2">
                                <div class="input-login">
                                    <span class="fa fa-lock p-2"></span>
                                    @Html.TextBoxFor(m => m.contrasenna, new { @type = "password", @class = "input-l", @id = "passwordL", @placeholder = "Contraseña" })
                                </div>
                            </div>
                        </div>
                        <button type="submit" id="submitBtn" class="btn btn-danger" disabled>Ingresar <i class=" fa-solid fa-arrow-right-to-bracket"> </i></button>

                    }
                </div>
            </div>
            <div class="row my-5">
                <a href="@Url.Action("RecuperarContrasenna","Inicio")">
                    <div class="col-6 col-md-6">
                        <div class="feature">
                            <div class="icon">
                                <img src="images/forgot.png" alt="Image" class="imf-fluid">
                            </div>
                            <h3>Recuperar Contraseña</h3>
                            <p>Da click acá para recuperar la contraseña mediante tu correo electrónico</p>
                        </div>
                </a>
            </div>



            <div class="col-6 col-md-6">
                <div class="feature">
                    <div class="icon">
                        <img src="images/TipoCambio.png" alt="Image" class="imf-fluid">
                    </div>
                    <h3>Tipo De Cambio</h3>
                    <p> Fecha: @ViewData["CurrentDate"] ₡ @ViewData["ExchangeRate"]  </p>
                </div>
            </div>



        </div>
    </div>

    <div class="col-lg-5">
        <div class="img-wrap">
            <img src="images/why-choose-us-img.jpg" alt="Image" class="img-fluid">
        </div>
    </div>

</div>

<script src="~/Functions/Functions.js"></script>

